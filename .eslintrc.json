{
  "extends": [
    "plugin:prettier/recommended",
    "next/core-web-vitals"
  ],
  "plugins": [
    "lodash-import-method"
  ],
  "rules": {
    "prettier/prettier": "error",
    "lodash-import-method/submodule": 2,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "prefer-template": "error",
    "semi": "error",
    "react-hooks/exhaustive-deps": "off" 
  }
}